# builds a progrma using make utilities

CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
RM = rm -f

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean: 
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
