#builds a program using make

CC = gcc
CFLAGES = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
RM = rm -f
NAME = school

all: $(OBJ)
	$(CC) $(CFLAGES) $(OBJ) -o $(NAME)
	chmod +x $(NAME)

clean: 
	$(RM) *~ $(NAME)

oclean: 
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
